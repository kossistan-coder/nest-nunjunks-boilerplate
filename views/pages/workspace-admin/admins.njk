{% extends "layouts/workspace-admin.njk" %}
{% block content %}
  <!-- Main Content -->
  <div class="ml-64 min-h-screen gradient-bg text-white ">
    <!-- Header -->
    <header class="bg-secondary/30 backdrop-blur-lg border-b border-white/10 p-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold">Paramètres</h1>
          <p class="text-gray-400">Configurez votre plateforme EventPro</p>
        </div>

        <div class="flex items-center space-x-4">
          <!-- Save Button -->
          <button class="bg-accent hover:bg-accent/80 px-6 py-2 rounded-lg font-medium transition-colors flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            <span>Sauvegarder</span>
          </button>
        </div>
      </div>
    </header>

    <div class="flex">
      <!-- Settings Sidebar -->
      <div class="w-80 bg-secondary/20 border-r border-white/10 min-h-screen p-6">
        <nav class="space-y-2">
          <button onclick="showTab('general')" class="settings-tab active w-full text-left p-3 rounded-lg flex items-center space-x-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>Général</span>
          </button>

          <button onclick="showTab('profile')" class="settings-tab w-full text-left p-3 rounded-lg flex items-center space-x-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>Profil</span>
          </button>

          <button onclick="showTab('notifications')" class="settings-tab w-full text-left p-3 rounded-lg flex items-center space-x-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 19.5A2.5 2.5 0 016.5 17H20"></path>
            </svg>
            <span>Notifications</span>
          </button>

          <button onclick="showTab('security')" class="settings-tab w-full text-left p-3 rounded-lg flex items-center space-x-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <span>Sécurité</span>
          </button>

          <button onclick="showTab('billing')" class="settings-tab w-full text-left p-3 rounded-lg flex items-center space-x-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
            </svg>
            <span>Facturation</span>
          </button>

          <button onclick="showTab('integrations')" class="settings-tab w-full text-left p-3 rounded-lg flex items-center space-x-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
            </svg>
            <span>Intégrations</span>
          </button>

          <button onclick="showTab('advanced')" class="settings-tab w-full text-left p-3 rounded-lg flex items-center space-x-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
            </svg>
            <span>Avancé</span>
          </button>
        </nav>
      </div>

      <!-- Settings Content -->
      <div class="flex-1 p-6">
        <!-- General Tab -->
        <div id="general-tab" class="settings-content">
          <div class="space-y-8">
            <!-- Company Information -->
            <div class="glass-effect rounded-xl p-6">
              <h3 class="text-xl font-bold mb-6">Informations de l'entreprise</h3>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Nom de l'entreprise</label>
                  <input type="text" value="EventPro Solutions" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Email de contact</label>
                  <input type="email" value="contact@eventpro.com" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Téléphone</label>
                  <input type="tel" value="+33 1 23 45 67 89" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Site web</label>
                  <input type="url" value="https://eventpro.com" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                </div>

                <div class="md:col-span-2">
                  <label class="block text-sm font-medium text-gray-300 mb-2">Adresse</label>
                  <textarea rows="3" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">123 Rue de la Paix, 75001 Paris, France</textarea>
                </div>
              </div>
            </div>

            <!-- Platform Settings -->
            <div class="glass-effect rounded-xl p-6">
              <h3 class="text-xl font-bold mb-6">Paramètres de la plateforme</h3>

              <div class="space-y-6">
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium">Mode maintenance</h4>
                    <p class="text-sm text-gray-400">Activer le mode maintenance pour la plateforme</p>
                  </div>
                  <label class="toggle-switch">
                    <input type="checkbox">
                    <span class="slider"></span>
                  </label>
                </div>

                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium">Inscriptions publiques</h4>
                    <p class="text-sm text-gray-400">Permettre aux utilisateurs de s'inscrire publiquement</p>
                  </div>
                  <label class="toggle-switch">
                    <input type="checkbox" checked>
                    <span class="slider"></span>
                  </label>
                </div>

                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium">Notifications par email</h4>
                    <p class="text-sm text-gray-400">Envoyer des notifications par email aux participants</p>
                  </div>
                  <label class="toggle-switch">
                    <input type="checkbox" checked>
                    <span class="slider"></span>
                  </label>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Fuseau horaire</label>
                  <select class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                    <option>Europe/Paris (UTC+1)</option>
                    <option>Europe/London (UTC+0)</option>
                    <option>America/New_York (UTC-5)</option>
                    <option>Asia/Tokyo (UTC+9)</option>
                  </select>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Langue par défaut</label>
                  <select class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                    <option>Français</option>
                    <option>English</option>
                    <option>Español</option>
                    <option>Deutsch</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Profile Tab -->
        <div id="profile-tab" class="settings-content hidden">
          <div class="space-y-8">
            <!-- Profile Information -->
            <div class="glass-effect rounded-xl p-6">
              <h3 class="text-xl font-bold mb-6">Informations du profil</h3>

              <div class="flex items-center space-x-6 mb-6">
                <div class="relative">
                  <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=100&h=100&fit=crop&crop=face" alt="Profile" class="w-24 h-24 rounded-full">
                  <button class="absolute bottom-0 right-0 bg-accent hover:bg-accent/80 p-2 rounded-full transition-colors">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                    </svg>
                  </button>
                </div>
                <div>
                  <h4 class="text-lg font-medium">John Doe</h4>
                  <p class="text-gray-400">Administrateur</p>
                  <button class="text-accent hover:text-accent/80 text-sm mt-1">Changer la photo</button>
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Prénom</label>
                  <input type="text" value="John" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Nom</label>
                  <input type="text" value="Doe" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Email</label>
                  <input type="email" value="john.doe@eventpro.com" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Téléphone</label>
                  <input type="tel" value="+33 6 12 34 56 78" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Poste</label>
                  <input type="text" value="Administrateur Système" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Département</label>
                  <select class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                    <option>Administration</option>
                    <option>Marketing</option>
                    <option>Ventes</option>
                    <option>Support</option>
                  </select>
                </div>
              </div>
            </div>

            <!-- Preferences -->
            <div class="glass-effect rounded-xl p-6">
              <h3 class="text-xl font-bold mb-6">Préférences</h3>

              <div class="space-y-6">
                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Langue d'interface</label>
                  <select class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                    <option>Français</option>
                    <option>English</option>
                    <option>Español</option>
                  </select>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Format de date</label>
                  <select class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                    <option>DD/MM/YYYY</option>
                    <option>MM/DD/YYYY</option>
                    <option>YYYY-MM-DD</option>
                  </select>
                </div>

                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium">Mode sombre</h4>
                    <p class="text-sm text-gray-400">Utiliser le thème sombre pour l'interface</p>
                  </div>
                  <label class="toggle-switch">
                    <input type="checkbox" checked>
                    <span class="slider"></span>
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Notifications Tab -->
        <div id="notifications-tab" class="settings-content hidden">
          <div class="space-y-8">
            <!-- Email Notifications -->
            <div class="glass-effect rounded-xl p-6">
              <h3 class="text-xl font-bold mb-6">Notifications par email</h3>

              <div class="space-y-6">
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium">Nouveaux événements</h4>
                    <p class="text-sm text-gray-400">Recevoir un email lors de la création d'un nouvel événement</p>
                  </div>
                  <label class="toggle-switch">
                    <input type="checkbox" checked>
                    <span class="slider"></span>
                  </label>
                </div>

                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium">Nouvelles inscriptions</h4>
                    <p class="text-sm text-gray-400">Recevoir un email lors de nouvelles inscriptions</p>
                  </div>
                  <label class="toggle-switch">
                    <input type="checkbox" checked>
                    <span class="slider"></span>
                  </label>
                </div>

                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium">Rappels d'événements</h4>
                    <p class="text-sm text-gray-400">Recevoir des rappels avant les événements</p>
                  </div>
                  <label class="toggle-switch">
                    <input type="checkbox" checked>
                    <span class="slider"></span>
                  </label>
                </div>

                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium">Rapports hebdomadaires</h4>
                    <p class="text-sm text-gray-400">Recevoir un rapport hebdomadaire des activités</p>
                  </div>
                  <label class="toggle-switch">
                    <input type="checkbox">
                    <span class="slider"></span>
                  </label>
                </div>
              </div>
            </div>

            <!-- Push Notifications -->
            <div class="glass-effect rounded-xl p-6">
              <h3 class="text-xl font-bold mb-6">Notifications push</h3>

              <div class="space-y-6">
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium">Notifications du navigateur</h4>
                    <p class="text-sm text-gray-400">Recevoir des notifications dans le navigateur</p>
                  </div>
                  <label class="toggle-switch">
                    <input type="checkbox" checked>
                    <span class="slider"></span>
                  </label>
                </div>

                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium">Notifications mobiles</h4>
                    <p class="text-sm text-gray-400">Recevoir des notifications sur l'application mobile</p>
                  </div>
                  <label class="toggle-switch">
                    <input type="checkbox" checked>
                    <span class="slider"></span>
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Security Tab -->
        <div id="security-tab" class="settings-content hidden">
          <div class="space-y-8">
            <!-- Password -->
            <div class="glass-effect rounded-xl p-6">
              <h3 class="text-xl font-bold mb-6">Mot de passe</h3>

              <div class="space-y-6">
                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Mot de passe actuel</label>
                  <input type="password" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Nouveau mot de passe</label>
                  <input type="password" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-300 mb-2">Confirmer le nouveau mot de passe</label>
                  <input type="password" class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent">
                </div>

                <button class="bg-accent hover:bg-accent/80 px-6 py-2 rounded-lg font-medium transition-colors">
                  Changer le mot de passe
                </button>
              </div>
            </div>

            <!-- Two-Factor Authentication -->
            <div class="glass-effect rounded-xl p-6">
              <h3 class="text-xl font-bold mb-6">Authentification à deux facteurs</h3>

              <div class="space-y-6">
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium">Authentification à deux facteurs</h4>
                    <p class="text-sm text-gray-400">Ajouter une couche de sécurité supplémentaire à votre compte</p>
                  </div>
                  <label class="toggle-switch">
                    <input type="checkbox">
                    <span class="slider"></span>
                  </label>
                </div>

                <div class="bg-yellow-500/10 border border-yellow-500/20 rounded-lg p-4">
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 text-yellow-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                    <div>
                      <h4 class="font-medium text-yellow-400">Recommandation de sécurité</h4>
                      <p class="text-sm text-gray-300 mt-1">Nous recommandons fortement d'activer l'authentification à deux facteurs pour protéger votre compte.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Sessions -->
            <div class="glass-effect rounded-xl p-6">
              <h3 class="text-xl font-bold mb-6">Sessions actives</h3>

              <div class="space-y-4">
                <div class="flex items-center justify-between p-4 bg-white/5 rounded-lg">
                  <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-success/20 rounded-lg flex items-center justify-center">
                      <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="font-medium">Session actuelle</p>
                      <p class="text-sm text-gray-400">Chrome sur Windows • Paris, France</p>
                    </div>
                  </div>
                  <span class="text-success text-sm">Actif maintenant</span>
                </div>

                <div class="flex items-center justify-between p-4 bg-white/5 rounded-lg">
                  <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gray-500/20 rounded-lg flex items-center justify-center">
                      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="font-medium">iPhone Safari</p>
                      <p class="text-sm text-gray-400">Safari sur iOS • il y a 2 heures</p>
                    </div>
                  </div>
                  <button class="text-accent hover:text-accent/80 text-sm">Déconnecter</button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Billing Tab -->
        <div id="billing-tab" class="settings-content hidden">
          <div class="space-y-8">
            <!-- Current Plan -->
            <div class="glass-effect rounded-xl p-6">
              <h3 class="text-xl font-bold mb-6">Plan actuel</h3>

              <div class="bg-accent/10 border border-accent/20 rounded-lg p-6">
                <div class="flex items-center justify-between mb-4">
                  <div>
                    <h4 class="text-xl font-bold text-accent">Plan Professional</h4>
                    <p class="text-gray-400">Jusqu'à 1000 participants par événement</p>
                  </div>
                  <div class="text-right">
                    <p class="text-2xl font-bold">€99</p>
                    <p class="text-sm text-gray-400">/mois</p>
                  </div>
                </div>

                <div class="space-y-2 mb-6">
                  <div class="flex items-center space-x-2">
